{
  "name": "eve-workspace",
  "version": "1.0.0",
  "description": "Eve Workspace - Multi-provider LLM web interface",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "ssl": "HTTPS_CERT=./certs/server.pem HTTPS_KEY=./certs/server-key.pem PORT=443 node server.js",
    "test": "jest --selectProjects unit",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:all": "jest",
    "test:watch": "jest --selectProjects unit --watch",
    "test:e2e": "npx playwright test --config e2e/playwright.config.ts",
    "test:e2e:video": "npx playwright test --config e2e/playwright.video.config.ts"
  },
  "dependencies": {
    "@simplewebauthn/server": "^13.2.2",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "dompurify": "^3.2.0",
    "express": "^4.18.2",
    "marked": "^15.0.0",
    "monaco-editor": "^0.45.0",
    "node-pty": "^1.2.0-beta.10",
    "trash": "^10.1.0",
    "uuid": "^9.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "jest": "^30.2.0"
  }
}
